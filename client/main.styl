@import 'nib'
@import '/stylesheets/font-awesome.css'
*
  box-sizing: border-box

html, body
  height: 100%

body
  background: url('/images/background.png') center center
  font-family: Helvetica-Neue, Arial
  font-size: 14px

p
  margin-top: 0

post-bg-color = #efefef
post-bg-color = #f9ee70
.post
  padding: 10px 10px 20px 10px
  background: post-bg-color url('/images/paper.png') center center
  display: inline-block
  border-radius: 3px
  position: absolute
  box-shadow: 0px 1px 5px rgba(0,0,0,0.3)
  min-width: 240px
  min-height: 60px
  width: auto
  min-width: 240px
  max-width: 240px
  max-height: 240px
  &.dragging
    box-shadow: 0px 3px 7px rgba(0,0,0,0.3)
  &.image
    background: #fff url('/images/paper.png') center center
    padding-bottom: 40px
    max-height: none
    img
      width: 100%
  .post-body
    max-height: 210px
    overflow-y: auto
  .delete-link
    display: none
    position: absolute
    top: -3px
    right: -3px
  &:hover
    .delete-link
      display: block
  .byline
    position: absolute
    bottom: -10px
    right: -10px
    cite
      padding-bottom: 20px
      line-height: 25px
      display: inline-block
      float: left
      margin-right: 10px
      height: 30px
      font-size: 10px
    img
      width: 30px
      float: right
      border-radius: 3px
      vertical-align: center
      box-shadow: 0 2px 2px rgba(0,0,0,0.3)

.askew:nth-child(2n+1)
  transform: rotate(-2deg)

.askew:nth-child(3n+2)
  transform: rotate(1deg)

.askew:nth-child(5n+3)
  transform: rotate(-3deg)

.askew:nth-child(7n+5)
  transform: rotate(6deg)

.askew:nth-child(11n+7)
  transform: rotate(4deg)

.new-post
  bottom: 10px
  left: 10px
  textarea
    background: none
    border-color: rgba(0,0,0,0.1)
    width: 220px


